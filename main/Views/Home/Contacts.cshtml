@model Users

@{
    ViewData["Title"] = "Контактная информация";
}
<h1>@ViewData["Title"]</h1>

<link rel='stylesheet' href="~/css/bootstrap.min.css">
<script src="~/js/angular.min.js"></script>

<script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&apikey=f0112891-be36-4c43-8790-59683d812f37" type="text/javascript"></script>
<script src="placemark.js" type="text/javascript"></script>
<style>
    html, body, #map {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
    }
</style>
<script>
    angular.module("myapp", [])
        .controller("HelloController", function ($scope, $http) {
            
        });
    ymaps.ready(init);
    function init() {
        var myMap = new ymaps.Map("map", {
            center: [55.566807, 37.576394],
            zoom: 10
        }, {
            searchControlProvider: 'yandex#search'
        }),
            // Создаем геообъект с типом геометрии "Точка".
            myGeoObject = new ymaps.GeoObject(),
        myPieChart = new ymaps.Placemark();

        myMap.geoObjects
            .add(myGeoObject)
            .add(myPieChart)
            .add(new ymaps.Placemark([55.566807, 37.576394], {
                balloonContent: 'наш филиал',
                iconCaption: '...'
            }, {
                preset: 'islands#greenDotIconWithCaption'
            }))
    };
</script>

<body ng-app="myapp">
    <div ng-controller="HelloController">
        <h5>МЕСТОПОЛОЖЕНИЕ</h5>
        <p style="font-size:13px; color: dimgrey;">Метро - <strong>Бульвар Дмитрия Донского!</strong></p>
        <div id="map" style="width: 600px; height: 400px"></div>

        <h4>КОНТАКТЫ</h4>
        <p style="font-size:13px; color: dimgrey;">Тимофей - +7(999)999-99-99</p>

    </div>
    </body>